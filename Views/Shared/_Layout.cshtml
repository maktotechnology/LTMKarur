<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - LTMKarur</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">LTMKarur</a>

            <div class="d-flex ms-auto">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <!-- Plain HTML form to avoid any tag-helper weirdness -->
                    <form action="/Account/Logout" method="post" style="margin:0;">
                        @Html.AntiForgeryToken()
                        <button type="submit" id="navLogoutBtn" class="btn btn-light btn-sm text-primary">Logout</button>
                    </form>
                }
            </div>
        </div>
    </nav>

    <main class="container my-4">
        @RenderBody()
    </main>
</body>
</html>

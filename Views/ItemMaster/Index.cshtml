@model IEnumerable<LTMKarur.Models.ItemMaster>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Item Master";
}

<h4 class="mb-3">Item Master</h4>

<div class="position-fixed top-0 end-0 p-3" style="z-index: 1100">
    <div id="toastContainer"></div>
</div>

<a asp-action="Create" class="btn btn-primary mb-3">‚ûï Add New Item</a>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-light">
        <tr>
            <th>Item Name</th>
            <th>Stock Quantity</th>
            <th>Warehouse Name</th>
            <th class="text-center" style="width: 220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-semibold">@item.ItemName</td>
                <td>@item.StockQuantity</td>
                <td>@item.WarehouseName</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">üëÅÔ∏è View</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm me-1">‚úèÔ∏è Edit</a>
                    <form asp-action="Delete" method="post" asp-route-id="@item.Id" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm"
                            onclick="return confirm('Are you sure you want to delete this item?');">üóëÔ∏è Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
    function showToast(message, type = 'success') {
        const bg = type === 'success' ? 'text-bg-success' : 'text-bg-danger';
        const toast = $(`
            <div class="toast align-items-center ${bg} border-0 mb-2" role="alert">
                <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        `);
        $("#toastContainer").append(toast);
        const bsToast = new bootstrap.Toast(toast[0]);
        bsToast.show();
    }

    @if (TempData["Success"] != null)
    {
        <text>showToast('@TempData["Success"]');</text>
    }

    @if (TempData["Error"] != null)
    {
        <text>showToast('@TempData["Error"]', 'danger');</text>
    }
</script>
}

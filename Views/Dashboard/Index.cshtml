@{
    Layout = "_Layout";
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h3 class="mb-0">Welcome, @User.Identity?.Name!</h3>
        <span class="text-muted small">@DateTime.Now.ToString("dddd, dd MMM yyyy")</span>
    </div>

    <!-- Dashboard Cards -->
    <div class="row g-3">
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h6 class="fw-bold mb-2">Sales Dashboard</h6>
                    <p class="text-muted small mb-0">Summary of sales performance</p>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h6 class="fw-bold mb-2">Purchases</h6>
                    <p class="text-muted small mb-0">Manage purchase orders</p>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h6 class="fw-bold mb-2">Stocks</h6>
                    <p class="text-muted small mb-0">Monitor stock levels</p>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h6 class="fw-bold mb-2">Accounts</h6>
                    <p class="text-muted small mb-0">View financial summary</p>
                </div>
            </div>
        </div>
    </div>
</div>

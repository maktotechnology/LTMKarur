@model IEnumerable<LTMKarur.Models.CustomerMaster>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Customer Master";
}

<h4 class="mb-3">Customer Master</h4>
<a asp-action="Create" class="btn btn-primary mb-3">➕ Add Customer</a>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-light">
        <tr>
            <th>Customer Name</th>
            <th class="text-center" style="width:180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.CustomerName</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-success btn-sm me-1">✏️</a>
                    <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-info btn-sm me-1">👁️</a>
                    <form asp-action="Delete" method="post" asp-route-id="@c.Id" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Delete this customer?');">🗑️</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
